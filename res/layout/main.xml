<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/app_title" 
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#0788ff"
        android:paddingLeft="10px"
        android:paddingTop="10px"
        android:text="Servers"
        android:textColor="#fff"
        android:textSize="18px" />
    
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="50px"
        android:stretchColumns="0,1,2,3"
        android:background="#000" >
        <TableRow
            android:id="@+id/icon_row_default" >
            <ImageView
            android:id="@+id/home"
            android:layout_width="40px"
            android:layout_height="40px"
            android:paddingTop="5px"
            android:src="@drawable/icon_home_active"
            android:clickable="true" />
            <ImageView
            android:id="@+id/refresh"
            android:layout_width="40px"
            android:layout_height="40px"
            android:paddingTop="5px"
            android:src="@drawable/icon_refresh_active"
            android:clickable="true" />
            <ImageView
            android:id="@+id/settings"
            android:layout_width="40px"
            android:layout_height="40px"
            android:paddingTop="5px"
            android:src="@drawable/icon_settings_active"
            android:clickable="true" />
          <ImageView
            android:id="@+id/quit"
            android:layout_width="40px"
            android:layout_height="40px"
            android:paddingTop="5px"
            android:src="@drawable/icon_quit_active"
            android:clickable="true" />
        </TableRow>
        <TableRow
            android:id="@+id/icon_row_settings" >
            <ImageView
            android:id="@+id/done"
            android:layout_width="40px"
            android:layout_height="40px"
            android:paddingTop="5px"
            android:src="@drawable/icon_back"
            android:clickable="true" />
          <ImageView
            android:id="@+id/add"
            android:layout_width="40px"
            android:layout_height="40px"
            android:paddingTop="5px"
            android:src="@drawable/icon_add"
            android:clickable="true" />
        </TableRow>
    </TableLayout>

    <WebView
        android:id="@+id/phonegap_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>